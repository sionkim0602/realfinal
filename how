<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:400,700|Montserrat:900">
    <style>
        body {
            background-color: white;
        }
        
        #timer {
            color: #8bcef0;
            text-align: center;
            text-transform: uppercase;
            font-family: 'Lato', sans-serif;
            font-size: .7em;
            letter-spacing: 5px;
        }
        
        .days, .hours {
            display: inline-block;
            padding: 20px;
            width: 100px;
            border-radius: 5px;
            background: #8bcef0;
        }
        
        .numbers {
            font-family: 'Montserrat', sans-serif;
            color: #0594b0;
            font-size: 4em;
            text-align: center;
        }
    </style>
    <title>Countdown Timer</title>
</head>
<body>
    <div id="timer">
        <div class="days"> 
            <div id="days" class="numbers"> </div>days
        </div> 
        <div class="hours"> 
            <div id="hours" class="numbers"> </div>hours
        </div>
    </div>

    <script>
        const myDate = new Date('Jun 02, 2025 00:00:00');
        
        // countdown
        let timer = setInterval(function() {
            // get today's date
            const today = new Date().getTime();
        
            // get the difference
            const diff = myDate - today;
        
            // math
            let days = Math.floor(diff / (1000 * 60 * 60 * 24));
            let hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        
            // display
            document.getElementById("days").innerHTML = days;
            document.getElementById("hours").innerHTML = hours;
        
        }, 1000); // update every second
    </script>
</body>
</html>
